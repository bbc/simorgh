  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "runtimeVersion": "18",
      "request": "launch",
      "name": "Debug Express App",
      "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
      "args": [
        "--watch", "--progress", "--env" , "config='server'"
