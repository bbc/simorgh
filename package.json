{
  "name": "simorgh",
  "version": "0.0.1",
  "description": "Simorgh",
  "scripts": {
    "amp:validate": "wait-on http://localhost:7080/news/articles/c9rpqy7pmypo.amp && amphtml-validator http://localhost:7080/news/articles/c9rpqy7pmypo.amp",
    "audit:ci": "audit-ci -low",
    "bbcA11y": "bbc-a11y",
    "build": "rm -rf build && NODE_ENV=production webpack",
    "cypress": "cypress run",
    "cypress:interactive": "cypress open",
    "cypress:storybook": "cypress run --project ./.storybook/.",
    "cypress:storybook:interactive": "cypress open --project ./.storybook/.",
    "dataValidate": "node src/app/dataValidator/index.js",
    "dataValidate:debug": "npm run dataValidate --DEBUG_MODE=true",
    "dev": "rm -rf build && run-p webpack:dev:client webpack:dev:server",
    "force-package-lock-https": "find . -type f -name \"package-lock.json\" | grep -v node_modules | xargs -I % sh -c 'echo \"Replacing http->https in %\"; sed -i \"\" -e \"s/http:\\/\\//https:\\/\\//g\" %'",
    "killApp": "(lsof -t -i:7080 | xargs kill)",
    "killStorybook": "(lsof -t -i:9001 | xargs kill)",
    "lighthouse": "lighthouse http://localhost:7080/news/articles/c85pqyj5m2ko --output-path=./reports/report.html --view",
    "postshrinkwrap": "if test -z $CI; then \n npm run force-package-lock-https \n fi",
    "speculate": "speculate",
    "start": "NODE_ENV=production node build/server.js",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "npm run test:lint && npm run dataValidate && npm run test:unit && npm run test:ampValidate:ci",
    "test:accessibility": "npm run killApp && npm run build && run-p --race start bbcA11y",
    "test:ampValidate": "npm run killApp && npm run build -- --hide-modules --colors && run-p --race start amp:validate",
    "test:ampValidate:ci": "npm run build -- --hide-modules --colors && run-p --race start amp:validate",
    "test:prod:ci": "npm install --no-save cypress bbc-a11y && run-p --race start cypress && run-p --race start bbcA11y",
    "test:e2e": "npm run killApp && npm run build && run-p --race start cypress",
    "test:e2e:interactive": "npm run killApp && npm run build && run-p --race start cypress:interactive",
    "test:e2e:storybook": "npm run killStorybook && run-p --race storybook cypress:storybook",
    "test:e2e:storybook:ci": "run-p --race storybook cypress:storybook",
    "test:e2e:storybook:interactive": "npm run killStorybook && run-p --race storybook cypress:storybook:interactive",
    "test:lighthouse": "node scripts/lighthouse/index.js",
    "test:lighthouse:ci": "npm run build && run-p --race start test:lighthouse",
    "test:lint": "eslint --ext .js,jsx,json ./src ./scripts/lighthouse ./data ./cypress ./.storybook ./webpack** && swagger-cli validate data/schema.yaml",
    "test:lint:css": "stylelint 'src/**/*.js' 'src/**/*.jsx'",
    "test:unit": "jest --env=jsdom --coverage --colors",
    "snyk": "snyk test",
    "updateSnapshots": "npm run test:unit -- -u",
    "webpack:dev:client": "NODE_ENV=development webpack-dev-server --inline --hot --env.config='client'",
    "webpack:dev:server": "wait-on ./build/assets.json && NODE_ENV=development webpack --env.config='server'"
  },
  "husky": {
    "hooks": {
      "post-merge": "sh scripts/dependencyUpdateCheck.sh",
      "pre-commit": "npm run test:lint",
      "pre-push": "sh scripts/stopPushOnLatest.sh && sh scripts/upToDateWithLatest.sh && sh scripts/enforceVersions.sh && npm run test:unit && npm run snyk"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc-news/simorgh.git"
  },
  "keywords": [
    "BBC",
    "Article"
  ],
  "author": "BBC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bbc-news/simorgh/issues"
  },
  "homepage": "https://github.com/bbc-news/simorgh#readme",
  "dependencies": {
    "@bbc/gel-foundations": "^0.1.3",
    "@bbc/psammead-assets": "^0.1.3",
    "@bbc/psammead-brand": "^0.2.1",
    "@bbc/psammead-caption": "^0.1.4",
    "@bbc/psammead-copyright": "^0.2.4",
    "@bbc/psammead-figure": "^0.1.1",
    "@bbc/psammead-headings": "^0.1.7",
    "@bbc/psammead-image": "^0.3.0",
    "@bbc/psammead-image-placeholder": "^0.1.5",
    "@bbc/psammead-inline-link": "^0.1.3",
    "@bbc/psammead-paragraph": "^0.1.3",
    "@bbc/psammead-sitewide-links": "^0.1.4",
    "@bbc/psammead-styles": "^0.1.5",
    "@bbc/psammead-visually-hidden-text": "^0.1.7",
    "assets-webpack-plugin": "^3.9.7",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-plugin-styled-components": "^1.10.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "brotli-webpack-plugin": "^1.0.0",
    "compression": "^1.7.3",
    "compression-webpack-plugin": "^2.0.0",
    "copy-webpack-plugin": "^4.6.0",
    "dotenv": "^6.2.0",
    "es6-promise": "^4.2.5",
    "express": "^4.16.4",
    "express-static-gzip": "^1.1.3",
    "gnu-terry-pratchett": "0.0.2",
    "helmet": "^3.14.0",
    "isomorphic-fetch": "^2.2.1",
    "nanoid": "^2.0.0",
    "offline-plugin": "^5.0.5",
    "path-to-regexp": "^2.4.0",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-helmet": "^5.2.0",
    "react-router-dom": "^4.3.1",
    "react-universal-app": "^1.0.0",
    "speculate": "^1.7.4",
    "styled-components": "^4.1.3",
    "styled-normalize": "^8.0.3",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.5",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@storybook/react": "4.0.0-alpha.8",
    "amphtml-validator": "^1.0.23",
    "audit-ci": "^1.2.1",
    "babel-eslint": "^10.0.0",
    "bbc-a11y": "^2.2.5",
    "chalk": "^2.4.1",
    "chrome-launcher": "^0.10.5",
    "core-js": "^2.6.0",
    "cypress": "^3.1.1",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-json": "^1.2.1",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.12.0",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "jest-fetch-mock": "^2.0.0",
    "jest-styled-components": "^6.2.2",
    "lighthouse": "^3.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.0",
    "react-test-renderer": "^16.6.3",
    "snyk": "^1.122.0",
    "start-server-webpack-plugin": "^2.2.5",
    "stylelint": "^9.7.1",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.0",
    "supertest": "^3.3.0",
    "swagger-cli": "^2.2.0",
    "wait-on": "^3.1.0",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-dev-server": "^3.1.14",
    "yaml-js": "^0.2.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/(src|scripts)/**/*.{js,jsx}",
      "!**/src/app/helpers/tests/**",
      "!**/*.stories.jsx"
    ],
    "setupFiles": [
      "./src/app/helpers/tests/jest-setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js?(x)",
      "**/?(*.)+(spec|test).js?(x)"
    ]
  },
  "spec": {
    "executable": [
      "./bake-scripts/01-env-variables.sh"
    ],
    "post": [
      "mkdir -p /etc/bake-scripts/",
      "cp -R -af /usr/lib/simorgh/bake-scripts/* /etc/bake-scripts"
    ]
  }
}
